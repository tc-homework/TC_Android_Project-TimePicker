<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6sp"
        android:paddingBottom="6sp"
        >

        <TextView
            android:id="@+id/taskitem_important_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-7sp"
            android:gravity="center_vertical"
            android:paddingRight="6sp"
            android:text="·"
            android:textColor="@android:color/darker_gray"
            android:textSize="48sp"
            />

        <TextView
            android:id="@+id/taskitem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="数据库课设讨论"
            android:textSize="20sp"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/ddl"
                    android:layout_marginRight="4dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/taskitem_ddltime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="00:00"
                    android:textColor="@color/txt_stress_1"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/place"
                    android:layout_marginRight="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/taskitem_place"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="济事楼 100"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView android:layout_width="match_parent"
        android:id="@+id/taskitem_divider_line"
    android:layout_height="0.5dp"
    android:background="@color/divide_line"/>





</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainThemeColor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="6dp"
            android:paddingTop="20dp"
            >
            <Button
                android:id="@+id/login_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/md_nav_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/login"
                android:textSize="18dp"
                android:drawablePadding="4dp"
                android:textColor="#fff" />
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/main_margin_left"
        android:paddingRight="@dimen/main_margin_right"
        android:orientation="vertical"
        android:background="@color/background_1"
        >

        <EditText
            android:id="@+id/login_user_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="4dp"
            android:hint="邮箱或用户名"
            android:background="#00000000"
            android:maxLines="1"/>

        <ImageView android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_line"/>

        <EditText
            android:id="@+id/login_passwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="4dp"
            android:hint="密码"
            android:background="#00000000"
            android:maxLines="1"/>

        <ImageView android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_line"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/login"
            android:background="@color/mainThemeColor"
            android:elevation="6sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/textOnDarkBackground"

            />

        <Button
            android:id="@+id/login_test_btn"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="40dp"
            android:background="#00000000" />
    </LinearLayout>




</LinearLayout>